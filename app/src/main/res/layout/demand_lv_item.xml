<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="25dp"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/demand_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/privacy_calendar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/demand_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/demand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用相机"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/demand_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="开启相机权限，方便您编辑简历时上传照片和在线面试时视频等功能"
            android:textSize="10sp" />

    </LinearLayout>

</RelativeLayout>